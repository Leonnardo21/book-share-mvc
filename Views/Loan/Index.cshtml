@model IEnumerable<LoanModel>


<h1>Empréstimo de livro</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Recebedor</th>
            <th scope="col">Fornecedor</th>
            <th scope="col">Livro</th>
            <th scope="col">Última atualização</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var loan in Model)
            {
                <tr>
                    <th scope="row">@loan.Id</th>
                    <td>@loan.Recipient</td>
                    <td>@loan.Supplier</td>
                    <td>@loan.BookLoan</td>
                    <td>@loan.LastDateUpdate</td>
                </tr>
            }
        }
    </tbody>
</table>
